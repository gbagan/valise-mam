{
  "dependencies": {
    "esbuild": "^0.17.18",
    "purescript": "^0.15.9",
    "purs-backend-es": "^1.3.2",
    "rimraf": "^5.0.0",
    "sass": "^1.62.1",
    "spago": "^0.20.9"
  },
  "scripts": {
